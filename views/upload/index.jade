extends ../../drywall/layouts/default

block head
  title Login

block feet
  script(src='/aquaviews/upload/index.min.js?#{cacheBreaker}')

block body
  div.row
    div.col-sm-6
      div.page-header
        h1 Direct Upload
      div#directUpload

  script(type='text/template', id='tmpl-directUpload')
    form
      div.alerts
        |<% _.each(errors, function(err) { %>
        div.alert.alert-danger.alert-dismissable
          button.close(type='button', data-dismiss='alert') &times;
          |<%- err %>
        |<% }); %>
      div.form-group(class!='<%- errfor.category ? "has-error" : "" %>')
        label Category:
        input.form-control(type='text', name='category')
        span.help-block <%- errfor.category %>
      div.form-group(class!='<%- errfor.reading_value ? "has-error" : "" %>')
        label Reading Value:
        input.form-control(type='text', name='reading_value')
        span.help-block <%- errfor.reading_value %>
      div.form-group.input-append.date(class!='<%- errfor.reading_time ? "has-error" : "" %>')
        label Reading Time:
        input.form-control(type='text', name='reading_time')
        span.add-on
          i.icon-th
        span.help-block <%- errfor.reading_time %>
      div.form-actions
        input.btn.btn-primary(type='submit', value='Submit')
